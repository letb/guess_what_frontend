<fest:template xmlns:fest="http://fest.mail.ru">
  <fest:include src="components/button.xml"/>
  <fest:include src="components/page_title.xml"/>

  <fest:get name="title"> { text: 'Sign In' } </fest:get>
  <div class="sign-form">
    <div class="sign-form__wrapper">
      <form class="sign-form__signin" method="post">
        <div class="sign-form__row">
          <input type="text" name="name" class="sign-form__input" placeholder="Login" required="true" pattern="[a-zA-Z0-9_]+" title="Use letters, numbers or underscore."/>
        </div>

        <div class="sign-form__row">
          <input type="password" name="password" class="sign-form__input" placeholder="Password" required="true" />
        </div>

        <div class="sign-form__btns">
            <fest:get name="button">
              { type: 'submit', position: 'left', text: 'Sign In',
                classes: 'btn btn--green pull-right' }
            </fest:get>
            <fest:get name="button">
              { href: '/', position: 'right', text: 'Back',
                classes: 'btn btn--gray pull-left js-nav' }
            </fest:get>
        </div>
      </form>
    </div>
  </div>
</fest:template>

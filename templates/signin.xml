<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
  <div class="page-title page-title--center">
    <h2> Sign in </h2>
  </div>
  <div class="sign-form">
    <div class="sign-form__wrapper">
      <form class="sign-form__signin" method="post">
        <div class="sign-form__row">
          <input type="text" name="name" class="sign-form__input" placeholder="Login" required="true" pattern="[a-zA-Z0-9_]+" title="Use letters, numbers or underscore."/>
        </div>

        <div class="sign-form__row">
          <input type="password" name="password" class="sign-form__input" placeholder="Password" required="true" />
        </div>

        <div class="sign-form__btns">
          <div class="btn-wrapper btn-wrapper--left">
            <button type="submit" class="btn btn--green pull-right">
              Sign In
            </button>
          </div>
          <div class="btn-wrapper btn-wrapper--right">
            <a href="/" class="btn btn--gray pull-left js-nav">
              Back
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</fest:template>

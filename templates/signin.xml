<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
  <h1> Sign in </h1>
  <form id="login" method="post" action="/api/v1/auth/signin">

    <div class="name">
      <label for="name">Login: </label>
      <input type="text" name="name" required="true" pattern="[a-zA-Z0-9_]+" title="Use letters, numbers or underscore."/>
    </div>

    <div class="password">
      <label for="password">Password:</label>
      <input type="password" name="password" required="true" />
    </div>

    <button type="submit"> Sign In </button>
  </form>
  <a href="#">
    <button> Back </button>
  </a>
</fest:template>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
  <div class="text-center">
    <h2> Sign in </h2>
  </div>
  <row>
    <div class="col-md-4 col-md-offset-4">
      <form id="login" method="post" action="/api/v1/auth/signin">
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="Login" required="true" pattern="[a-zA-Z0-9_]+" title="Use letters, numbers or underscore."/>
        </div>

        <div class="form-group">
          <input type="password" name="password" class="form-control" placeholder="Password" required="true" />
        </div>

        <row>
          <div class="form-group col-md-2 col-md-offset-4">
            <button type="submit" class="btn btn-success pull-right"> Sign In </button>
          </div>
          <div class="col-md-2">
            <a href="#" class="btn btn-default pull-left"> Back </a>
          </div>
        </row>
      </form>
    </div>
  </row>
</fest:template>

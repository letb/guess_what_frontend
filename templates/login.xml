<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
	<h1> LOGIN SCREEN </h1>
	<form id="login" method="post" action="/api/v1/signup" class="login-form">
		<div class="email">
			<label for="email">Email:</label>
			<input type="email" value="" placeholder="name@email.com" required="required"
						 class="form__field"/>
		</div>

		<div class="login">
			<label for="login">Login: </label>
			<input type="text" value="" required="required" pattern="[a-zA-Z0-9_]+"
						 class="form__field" placeholder="username"
	 					 oninvalid="setCustomValidity('Please enter proper symbols')"
						 title="Use letters, numbers and underscore."/>
		</div>

		<div class="password">
			<label for="password">Password:</label>
			<input type="password" value="" required="required" pattern=".{{6, 30}}"
						 class="form__field" oninvalid="setCustomValidity('Password too short!')"
						 title="6 or more characters"/>
		</div>
	</form>
	<a href="#">
		<button> Back </button>
	</a>
</fest:template>
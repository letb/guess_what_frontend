<fest:template xmlns:fest="http://fest.mail.ru" context_name="chat">

<div class="chat">
  <div class="chat-history">
      <fest:include context="message" src="./chat-message.xml"/>
  </div>
  <p class="chat-feedback">Your partner is typing…</p>
  <form action="#" method="post">
    <fieldset>
      <input type="text" placeholder="Type your message…" autofocus="true"></input>
      <input type="hidden"></input>
    </fieldset>
  </form>
</div>

</fest:template>
<fest:template xmlns:fest="http://fest.mail.ru" context_name="params">
 <ul class="menu">
      <fest:if test="params.signedIn">
        Hello, <fest:value> params.user.get('name') </fest:value>!
      </fest:if>
      <fest:choose>
        <fest:when test="params.signedIn">
          <li class="menu__item">
            <a href='game' class='menu__link js-nav'>PLAY</a>
          </li>
          <li class="menu__item">
            <a href='scoreboard' class='menu__link js-nav'>Scoreboard</a>
          </li>
          <li class="menu__item">
            <a href='signout' class='menu__link js-nav signout'>Sign Out</a>
          </li>
        </fest:when>
        <fest:otherwise>
          <li class="menu__item">
            <a href='signup' class='menu__link js-nav'>Sign Up</a>
          </li>
          <li class="menu__item">
            <a href='signin' class='menu__link js-nav'>Sign In</a>
          </li>
          <li class="menu__item">
            <a href='scoreboard' class='menu__link js-nav'>Scoreboard</a>
          </li>
        </fest:otherwise>
      </fest:choose>
  </ul>
</fest:template>
